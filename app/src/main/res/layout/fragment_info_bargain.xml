<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.main.listSell.approveOrder.InfoBargainFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_Back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="@drawable/bg_edittext"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:targetApi="p">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_arrow_left"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:fontFamily="@font/poppinssemibold"
                android:text="Details Bargain"
                android:layout_marginEnd="16dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/card_Back"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/card_Back" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>

    <com.github.captain_miao.optroundcardview.OptRoundCardView
        android:id="@+id/card_info"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar3"
        app:optRoundCardBackgroundColor="#FFFADD"
        app:optRoundCardCornerRadius="15dp"
        app:optRoundCardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="107dp"
                android:layout_height="100dp"
                android:src="@drawable/illustration_details_bargain1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/poppinsregular"
                android:text="Lorem ipsum dolor sit amet consectetur. In molestie dictumst porttitor magna malesuada."
                android:textColor="#978100"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView9"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.github.captain_miao.optroundcardview.OptRoundCardView>

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="16dp"
        android:background="#F1F3F5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_info" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppinsmedium"
        android:text="Bidder's info"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view4" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_gambarPenawar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/kena"
        app:layout_constraintBottom_toBottomOf="@+id/tv_kotaPenawar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_namaPenawar"
        app:riv_corner_radius="50dp" />

    <TextView
        android:id="@+id/tv_namaPenawar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:fontFamily="@font/poppinsmedium"
        android:text="Nama penawar"
        android:textColor="@color/black"
        android:includeFontPadding="false"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/iv_gambarPenawar"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/tv_kotaPenawar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsregular"
        android:text="Kota penawar"
        android:textColor="#9E9E9E"
        android:textSize="16sp"
        android:layout_marginTop="2dp"
        android:includeFontPadding="false"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_namaPenawar"
        app:layout_constraintTop_toBottomOf="@+id/tv_namaPenawar" />

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#F1F3F5"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_gambarPenawar" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/poppinsmedium"
        android:text="Your product"
        android:includeFontPadding="false"
        android:layout_marginTop="12dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view5" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_productImageTawar"
        android:layout_width="82dp"
        android:layout_height="74dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:riv_corner_radius="10dp" />

    <TextView
        android:id="@+id/tv_productDateTawar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsregular"
        android:text="21 Jul, 05:37"
        android:textColor="#898989"
        android:textSize="12sp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@+id/textview18"
        app:layout_constraintTop_toBottomOf="@+id/textview18" />

    <TextView
        android:id="@+id/tv_productNameTawar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/poppinsregular"
        android:text="Product name"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:maxLines="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_productImageTawar"
        app:layout_constraintTop_toTopOf="@+id/iv_productImageTawar" />

    <TextView
        android:id="@+id/tv_productPriceTawar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="Rp 250.000"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        android:layout_marginEnd="16dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_productImageTawar"
        app:layout_constraintTop_toBottomOf="@+id/tv_productNameTawar" />

    <TextView
        android:id="@+id/tv_productPriceDitawar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="Rp 200.000"
        android:includeFontPadding="false"
        android:layout_marginStart="5dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textview18"
        app:layout_constraintTop_toBottomOf="@+id/tv_productPriceTawar" />

    <TextView
        android:id="@+id/textview18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsregular"
        android:text="bargain to"
        android:textColor="@color/black"
        android:includeFontPadding="false"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_productPriceDitawar"
        app:layout_constraintStart_toStartOf="@+id/tv_productPriceTawar"
        app:layout_constraintTop_toBottomOf="@+id/tv_productPriceTawar" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_tolakTawar"
        style="@style/GeneralButtonDecline"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        app:backgroundTint="@color/white"
        android:background="@drawable/bg_button_decline"
        android:fontFamily="@font/poppinssemibold"
        android:gravity="center_horizontal"
        android:textAllCaps="false"
        android:layout_marginStart="16dp"
        android:textColor="#E20000"
        android:textSize="18dip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_productDateTawar" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_terimaTawar"
        style="@style/GeneralButtonMain"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="12dp"
        android:includeFontPadding="false"
        android:background="@drawable/bg_button"
        android:fontFamily="@font/poppinssemibold"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_tolakTawar"
        app:layout_constraintTop_toBottomOf="@+id/tv_productDateTawar" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinssemibold"
        android:includeFontPadding="false"
        android:text="Accept"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_terimaTawar"
        app:layout_constraintEnd_toEndOf="@+id/btn_terimaTawar"
        app:layout_constraintStart_toStartOf="@+id/btn_terimaTawar"
        app:layout_constraintTop_toTopOf="@+id/btn_terimaTawar" />

    <TextView
        android:id="@+id/tv_decline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinssemibold"
        android:includeFontPadding="false"
        android:text="Decline"
        android:textColor="#E20000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_tolakTawar"
        app:layout_constraintEnd_toEndOf="@+id/btn_tolakTawar"
        app:layout_constraintStart_toStartOf="@+id/btn_tolakTawar"
        app:layout_constraintTop_toTopOf="@+id/btn_tolakTawar" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_HubungiTawar"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_button"
        app:backgroundTint="#1BD741"
        android:fontFamily="@font/poppinssemibold"
        android:text="Contact"
        android:includeFontPadding="false"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="24dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:icon="@drawable/ic_whatsapp"
        app:iconGravity="textStart"
        app:iconSize="28dp"
        style="@style/GeneralButtonMain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_HubungiTawarDisable"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_button"
        app:backgroundTint="#C8C8C8"
        android:fontFamily="@font/poppinssemibold"
        android:text="Contact"
        android:includeFontPadding="false"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="24dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="invisible"
        app:icon="@drawable/ic_whatsapp"
        app:iconGravity="textStart"
        app:iconSize="28dp"
        style="@style/GeneralButtonMain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>