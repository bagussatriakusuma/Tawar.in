<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tawarin" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_main</item>
        <item name="colorPrimaryVariant">@color/color_main</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_main</item>
        <item name="colorSecondaryVariant">@color/color_main</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottomsheet</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/color_main</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/poppinsregular</item>
        <item name="android:textColorHint">#999999</item>
    </style>

    <style name="GeneralButton" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/bg_button</item>
    </style>

    <style name="GeneralButtonMain" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/bg_button</item>
    </style>

    <style name="GeneralButtonDecline" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/bg_button_decline</item>
    </style>

    <style name="fab">
        <item name="android:padding">16dp</item>
    </style>

    <style name="BottomNavigationView">
        <item name="fontFamily">@font/poppinsmedium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="WhiteButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_main</item>
        <item name="android:textFontWeight" tools:targetApi="p">600</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/bg_white_button</item>
    </style>

    <style name="WhitePurpleButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_main</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
        <item name="fontFamily">@font/poppinsmedium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/bg_white_button</item>
    </style>

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/color_main</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <style name="Theme.Tawarin.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ProjectGroup2.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ProjectGroup2.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>